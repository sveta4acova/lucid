.contact
  @media screen and (max-width: 991px)
    padding 30px 0 150px 0

    &__form-container
      padding 30px 30px 20px 30px

  @media screen and (max-width: 767px)
    &__form-container
      width 90%

    &__form
      flex-direction column

    &__form-left
      margin-left 0

    &__form-left,
    &__form-right
      width 100%

  @media screen and (max-width: 500px)
    &__cards
      flex-direction column
      align-items center

    .card
      margin-bottom 30px