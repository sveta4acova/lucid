.main
  @media screen and (max-width: 1023px)
    &__image
      width 480px

  @media screen and (max-width: 991px)
    &__image
      width 360px
      margin-bottom -75px

  @media screen and (max-width: 767px)
    height auto

    &__content
      flex-direction column
      padding 100px 0 50px 0
      align-items center

    &__image
      align-self auto
      width 300px
      margin 40px 0 0